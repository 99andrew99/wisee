<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:id="@+id/arPinInfo"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="현재 연결된 와이파이 정보"
        android:textSize="25sp"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        />

    <TableLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/arPinInfo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:stretchColumns="*"
        android:background="@drawable/rounded_button"
        app:layout_constraintBottom_toTopOf="@id/arPinMapSaveBtn"
        >

        <TableRow android:layout_marginBottom="10dp">
            <TextView
                android:textSize="20sp"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:layout_column="0"
                android:text="SSID : "
                android:textAlignment="center"
                />
            <TextView
                android:textSize="20sp"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_column="1"
                android:id="@+id/ssidText"
                android:text="" />
        </TableRow>

        <TableRow
            android:layout_marginBottom="10dp">
            <TextView
                android:textSize="20sp"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_column="0"
                android:text="감도 : " />
            <TextView
                android:textSize="20sp"
                android:textAlignment="center"
                android:layout_column="1"
                android:id="@+id/signalText"
                android:text="" />
        </TableRow>

        <TableRow
            android:layout_marginBottom="10dp">
            <TextView
                android:textSize="20sp"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_column="0"
                android:text="채널 : " />
            <TextView
                android:textSize="20sp"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_column="1"
                android:id="@+id/channelText"
                android:text="" />
        </TableRow>

        <TableRow
            android:layout_marginBottom="10dp">
            <TextView
                android:textSize="20sp"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_column="0"
                android:text="주파수 : " />
            <TextView
                android:textSize="20sp"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_column="1"
                android:id="@+id/frequencyText"
                android:text="" />
        </TableRow>

        <TableRow>
            <TextView
                android:textSize="20sp"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_column="0"
                android:text="맥주소 : " />
            <TextView
                android:textSize="20sp"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_column="1"
                android:id="@+id/macText"
                android:text="" />
        </TableRow>

    </TableLayout>

    <android.widget.Button
        android:id="@+id/arPinMapSaveBtn"
        android:layout_width="200dp"
        android:layout_height="70dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/arPinInfo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/rounded_button"
        android:text="지도에 저장하기"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>